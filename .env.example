# =============================================================================
# PhishFish Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# All values in this file are examples - replace with your own

# =============================================================================
# Logging Settings
# =============================================================================

# Optional
LOG_LEVEL=

# =============================================================================
# Azure AI Configuration (GitHub Models)
# =============================================================================

# Required
GITHUB_TOKEN=ghp_your_token_here

# Optional
AZURE_MODEL=
AZURE_ENDPOINT=

# =============================================================================
# IMAP Email Server Settings
# =============================================================================

# Required
IMAP_HOST=imap.example.com
IMAP_USER=your-email@example.com

# Optional
IMAP_PORT=
IMAP_ENCRYPTION_METHOD=
IMAP_MAILBOX=

# =============================================================================
# IMAP Authentication Settings
# =============================================================================

# OAuth 2.0 Settings
USE_OAUTH=
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_AUTH_URL=
OAUTH_TOKEN_URL=
OAUTH_SCOPE=
OAUTH_CALLBACK_PORT=

# Password/App Password Settings
IMAP_PASS=

# =============================================================================
# Notification Settings (ntfy.sh)
# =============================================================================

# Optional
NTFY_TOPIC=
NTFY_URL=
NTFY_TITLE=
NOTIFY_ON=

# =============================================================================
# Move Email Settings
# =============================================================================

# Optional
MOVE_TO_FOLDER=
