# =============================================================================
# StopThePhish Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# All values in this file are examples - replace with your own

# =============================================================================
# Azure AI Configuration (GitHub Models)
# =============================================================================

# Required
GITHUB_TOKEN=ghp_your_token_here

# Optional
AZURE_MODEL=
AZURE_ENDPOINT=

# =============================================================================
# IMAP Email Server Settings
# =============================================================================

# Required
IMAP_HOST=imap.example.com
IMAP_USER=your-email@example.com
IMAP_PASS=your-password

# Optional
IMAP_PORT=
IMAP_AUTH_METHOD=
IMAP_MAILBOX=

# =============================================================================
# Notification Settings (ntfy.sh)
# =============================================================================

# Optional
NTFY_TOPIC=
NTFY_URL=
NTFY_TITLE=
NOTIFY_ON=

# =============================================================================
# Move Email Settings
# =============================================================================

# Optional
MOVE_TO_FOLDER=
